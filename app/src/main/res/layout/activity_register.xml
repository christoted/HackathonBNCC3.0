<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">

    <EditText
        android:id="@+id/id_et_activityregister_username"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <EditText
        android:id="@+id/id_et_activityregister_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Your phone number"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_activityregister_username"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/id_et_activityregister_email"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="youremail@email.com"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_activityregister_phoneNumber"
        app:layout_constraintVertical_bias="0.052" />

    <EditText
        android:id="@+id/id_et_activityregister_password"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_activityregister_email"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/id_btn_activityregister_register"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:text="Register"
        android:textColor="@color/white"
        android:background="@drawable/button_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_et_activityregister_password"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/id_tv_activityregister_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_activityregister_register"
        app:layout_constraintVertical_bias="0.219" />

    <TextView
        android:id="@+id/id_tv_activityregister_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_activityregister_register"
        app:layout_constraintVertical_bias="0.011" />

</androidx.constraintlayout.widget.ConstraintLayout>